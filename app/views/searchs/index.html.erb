<% provide(:title, "APP搜索结果") %>
<h1>search APP</h1>
<hr/>

<% @apps.each do |app| %>  
    <p><%= image_tag(app['icon']) %></p>
    <h2><%= link_to app['name'] ,"/apps/#{app['id']}" %></h2>
    <p> 下载次数:<%= app['dtimes'] %></p>
    <p> 更新时间:<%= app['uptime'] %></p>
    <p> 评分:<%= app['rate'] %></p>
  </hr>
<% end %>
